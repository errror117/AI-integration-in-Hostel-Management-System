# Environment Variables for Hostel Management System

# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/hostel?retryWrites=true&w=majority

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production

# Server Port
PORT=3000

# AI Features (Optional - System works without these)
# OpenAI API Key (for LLM-powered responses)
OPENAI_API_KEY=

# Alternative: Google Gemini API Key
GEMINI_API_KEY=

# Email Service (Optional - for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=
EMAIL_PASSWORD=

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
